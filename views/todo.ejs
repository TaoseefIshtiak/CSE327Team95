<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Todo Crud Application</title>
  </head>
  <body>

        <table class="table table-inverse">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Username</th>
          
                  </tr>
                </thead>
          
                <tbody>
                  <% for(var i=0; i < infos.length; i++) { %>
                 <tr>
          
                   <td><%= infos[i].firstName %></td>
                   <td><%= infos[i].eMail %></td>
                   <td><%= infos[i].username %></td>
          
          
                 </tr>
              <% } %>
                </tbody>
          
              </table>

        <h1>Update your todos here</h1>
        <form action="/grouphome" method="POST">
            <input type = "text" name= "groupName" placeholder = "Name your group with a beautiful name">
            <input type = "text" name= "type" placeholder = "Select your type">
            <input type = "text" name= "objective" placeholder = "what is your objective behind creating this group??">
            <button>Delete Todo</button>
        </form>
       
</body>
</html>